<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/cardview"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/container_bg"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        >

        <ImageView
            android:id="@+id/item_book_img"
            android:layout_width="125dp"
            android:layout_gravity="center"
            android:layout_height="115dp"
            android:src="@drawable/a"
            />
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_book_title"
                android:layout_width="125dp"
                android:layout_gravity="center"
                android:layout_height="25dp"
                android:text="The Man Withn"
                android:textSize="15dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/item_book_author"
                android:layout_width="125dp"
                android:layout_gravity="center"
                android:layout_height="25dp"
                android:text="By Ross Shultz"
                android:textSize="10dp"

                />
            <RatingBar
                android:id="@+id/item_book_ratingbar"
                style="@android:style/Widget.Material.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                >

                <TextView
                    android:id="@+id/item_book_page"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:text="225 pages"
                    android:textSize="10dp"

                    />

            </LinearLayout>


        </LinearLayout>
        <ImageView
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_favoriteblack_24"/>
    </LinearLayout>
    <LinearLayout

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="135dp"
        android:background="@drawable/container_bg"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        >

        <ImageView

            android:layout_width="125dp"
            android:layout_gravity="center"
            android:layout_height="115dp"
            android:src="@drawable/b"
            />
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:orientation="vertical">
            <TextView

                android:layout_width="125dp"
                android:layout_gravity="center"
                android:layout_height="25dp"
                android:text="The Man Withn"
                android:textSize="15dp"
                android:textStyle="bold"
                />
            <TextView

                android:layout_width="125dp"
                android:layout_gravity="center"
                android:layout_height="25dp"
                android:text="By Ross Shultz"
                android:textSize="10dp"

                />
            <RatingBar

                style="@android:style/Widget.Material.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                >

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:text="225 pages"
                    android:textSize="10dp"

                    />

            </LinearLayout>


        </LinearLayout>
        <ImageView
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_favoriteblack_24"/>
    </LinearLayout>
    <LinearLayout

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="135dp"
        android:background="@drawable/container_bg"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        >

        <ImageView

            android:layout_width="125dp"
            android:layout_gravity="center"
            android:layout_height="115dp"
            android:src="@drawable/c"
            />
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:orientation="vertical">
            <TextView

                android:layout_width="125dp"
                android:layout_gravity="center"
                android:layout_height="25dp"
                android:text="The Man Withn"
                android:textSize="15dp"
                android:textStyle="bold"
                />
            <TextView

                android:layout_width="125dp"
                android:layout_gravity="center"
                android:layout_height="25dp"
                android:text="By Ross Shultz"
                android:textSize="10dp"

                />
            <RatingBar

                style="@android:style/Widget.Material.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                >

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:text="225 pages"
                    android:textSize="10dp"

                    />

            </LinearLayout>


        </LinearLayout>
        <ImageView
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_favoriteblack_24"/>
    </LinearLayout>
</LinearLayout>